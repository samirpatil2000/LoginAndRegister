<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <EditText
            android:layout_width="327dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/emailLog"
            android:hint="Email" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="46dp"
            android:layout_marginTop="187dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="324dp"
            android:layout_height="46dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordLog"
            android:hint="Password" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="46dp"
            android:layout_marginTop="37dp" app:layout_constraintTop_toBottomOf="@+id/emailLog"/>

    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLog" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordLog" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="160dp"
    />
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarLog"
            app:layout_constraintEnd_toEndOf="@+id/buttonLog" app:layout_constraintStart_toStartOf="@+id/buttonLog"
            app:layout_constraintTop_toTopOf="@+id/buttonLog" android:layout_marginTop="12dp"
            android:layout_marginBottom="70dp" app:layout_constraintBottom_toTopOf="@+id/registerLinkTextView"/>
    <TextView
            android:text="New Here Register"
            android:layout_width="154dp"
            android:layout_height="29dp"
            android:id="@+id/registerLinkTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="128dp"
            android:textSize="18sp" android:textColor="#3B2FEE" android:layout_marginTop="105dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonLog" android:layout_marginBottom="59dp"
            app:layout_constraintBottom_toTopOf="@+id/showMessageLog" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="TextView somethin is went wrong pleaze check the input"
            android:layout_width="299dp"
            android:layout_height="48dp"
            android:id="@+id/showMessageLog" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="64dp" android:textColor="#F3F50822"/>
</androidx.constraintlayout.widget.ConstraintLayout>