<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">
    <EditText
            android:layout_width="166dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nameReg"
            android:hint="First Name" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="148dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="166dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/secondnameReg"
            android:hint="Second Name"
            android:layout_marginTop="148dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/emailReg"
            android:hint="Email" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/nameReg"/>
    <EditText
            android:layout_width="258dp"
            android:layout_height="43dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password1Reg"
            android:hint="Password" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/emailReg" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textColor="#E40539"/>
    <EditText
            android:layout_width="263dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password2Reg"
            android:hint="Confirm Password" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/password1Reg" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonReg" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/password2Reg" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="160dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="185dp" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Welcome"
            android:layout_width="228dp"
            android:layout_height="63dp"
            android:id="@+id/textView" android:textSize="36sp"
            style="@android:style/Widget.DeviceDefault.TextView.SpinnerItem" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="54dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" android:layout_marginBottom="55dp"
            app:layout_constraintBottom_toTopOf="@+id/secondnameReg" app:layout_constraintVertical_bias="0.0"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarReg"
            app:layout_constraintStart_toStartOf="@+id/buttonReg" app:layout_constraintEnd_toEndOf="@+id/buttonReg"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="228dp"
            app:layout_constraintHorizontal_bias="0.525"/>
    <TextView
            android:text="TextView somethin is went wrong pleaze check the input"
            android:layout_width="299dp"
            android:layout_height="48dp"
            android:id="@+id/showMessageReg" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp" android:textColor="#F3F50822"/>
</androidx.constraintlayout.widget.ConstraintLayout>